<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sourceAddress"
            style="@style/ListTitleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/xx_small_margin"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="" />

        <TextView
            android:id="@+id/bluetooth_signal_strength"
            style="@style/ListTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/xx_small_margin"
            android:text="" />

    </LinearLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexWrap="wrap"
        app:justifyContent="space_between"
        app:alignItems="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/xx_small_margin"
            android:orientation="horizontal">

            <!-- Group: Company Name + Separator -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/companyName"
                    style="@style/ListContentText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:id="@+id/companySeparator"
                    style="@style/ListContentText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="|"
                    android:textColor="@color/md_theme_primary"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/airTagIndicator"
                    style="@style/ListContentText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/airtag"
                    android:textColor="@color/airtag_purple"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/airTagSeparator"
                    style="@style/ListContentText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="|"
                    android:textColor="@color/md_theme_primary"
                    android:visibility="gone"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <!-- Group: Device Name Label + Value -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/otaDeviceLabel"
                    style="@style/ListLabelText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/device_name"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/otaDeviceName"
                    style="@style/ListContentText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:text="" />
            </LinearLayout>

        </LinearLayout>

        <!-- Right-aligned: Supported Technologies -->
        <TextView
            android:id="@+id/supportedTechnologies"
            style="@style/ListContentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_alignSelf="flex_end"
            android:layout_marginEnd="@dimen/xx_small_margin"
            android:paddingStart="@dimen/large_margin"
            android:text=""
            tools:ignore="RtlSymmetry" />
    </com.google.android.flexbox.FlexboxLayout>


</LinearLayout>
